{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "rootDir": "..",
    "baseUrl": "..",
    "paths": {
      "@root/*": ["./src/*"],
      "@db/*": ["./src/db/*"],
      "@routes/*": ["./src/routes/*"],
      "@utils/*": ["./src/utils/*"],
      "@plex/*": ["./src/plex/*"],
      "@shared/*": ["./src/shared/*"],
      "@data/*": ["./src/data/*"],
      "@schemas/*": ["./src/schemas/*"],
      "@services/*": ["./src/services/*"],
      "@types/*": ["./src/types/*"],
      "@/*": ["./src/client/*"],
      "@commitlint/types": ["./node_modules/@commitlint/types"]
    }
  },
  "include": ["**/*", "../src/**/*"],
  "exclude": ["../src/client/**/*"]
}
